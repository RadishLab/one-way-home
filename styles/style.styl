//Fallbacks
@require 'normalize.styl'
/* apply a natural box layout model to all elements */
*
*:before
*:after
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
  //Defintions

screen-color()
  rgb(2,25,6)
type-color()
  rgb(0,217,36)

fontsize($sizevalue = 2)
  font-size $sizevalue * 16 px
  font-size $sizevalue * 1 rem
//More resets
ul
nav
  padding 0
  margin 0
  li
    list-style-type none
a
  text-decoration none
  outline none

body
  font-family 'ocr-a-std', "Courier New", Courier, monospace
  font-weight 300
  height 100%
  color type-color()
  background-color screen-color()
.title
  width 100%
  text-transform uppercase
h1
  font-weight 300
  fontsize(2.15)

nav
  width 25%
  float left
  font-weight 300
  fontsize(1)
  a
  a:hover
   text-decoration line-through
ul
  ul
    margin-left 1em
    fontsize(0.75)
.update
  visibility hidden
#container
  width 100%
  height auto
  position absolute
  z-index 900
.terminal
  left 0
  right 0
  margin 0 auto
  width 90%
  top 300px
  z-index 2000
  fontsize(3)
  position absolute
  text-align center
video
  position absolute
  width 100%
  height 100%
.mask
  background-image url("../images/screen-mask.svg")
  background-repeat no-repeat
  background-size contain
  position absolute
  background-position center center
  top 0
  left 0
  width 100%
  height 100%
  z-index 1100
.button
.ng-valid
.update
  visibility hidden

@media (max-width: 64em)
  header
    padding 1em
  .view
    width 80%
    margin 0 auto
